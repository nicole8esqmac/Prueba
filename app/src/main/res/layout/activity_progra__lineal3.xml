<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyecto_final.Progra_Lineal3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hor1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Método Gráfio PL"
            android:textColor="#03164B"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>




            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/texto1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/texto2"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/holo_red_dark"/>




    <TextView
        android:id="@+id/hor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¿Cuál es el objetivo de la función?"
        android:textColor="#2B2B2B"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minimizar" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maximizar" />
            </RadioGroup>


            <androidx.cardview.widget.CardView
                android:elevation="8dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



    <TextView
        android:id="@+id/hor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Función:"
        android:textColor="#2B2B2B"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hor4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" x + y "
        android:textColor="#2B2B2B"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="80dp">



                <EditText
                    android:id="@+id/caja1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:inputType="numberDecimal" />

               <TextView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:text="X"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textSize="15dp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="+"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15dp"/>

                <EditText
                    android:id="@+id/caja2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:inputType="numberDecimal" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="Y"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15dp"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">



            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:src="@drawable/simb" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:elevation="8dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">



            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <EditText
            android:id="@+id/Edit_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:hint="valor1"
            android:gravity="center"
            android:inputType="numberDecimal" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="x1"
                android:gravity="center"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="+"
                android:gravity="center"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/Edit_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:hint="valor2"
                android:inputType="numberDecimal" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="y1"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/rb3"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="a" />

                    <RadioButton
                        android:id="@+id/rb4"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="b" />
                </RadioGroup>



            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/Edit_r1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:hint="R"
                android:inputType="numberDecimal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Edit_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:hint="valor3"
                android:gravity="center"
                android:inputType="numberDecimal" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="x2"
                android:gravity="center"/>


            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="+"
                android:gravity="center"
                android:textSize="15dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Edit_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:hint="valor4"
                android:inputType="numberDecimal" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="y2"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/rb5"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="a" />

                    <RadioButton
                        android:id="@+id/rb6"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="b" />

                </RadioGroup>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/Edit_r2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:hint="R"
                android:inputType="numberDecimal" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
            </LinearLayout>
            </HorizontalScrollView>



            <Button
                android:id="@+id/btncalculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="#690F66"
                android:gravity="center"
                android:onClick="calcular"
                android:text="Calcular"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>