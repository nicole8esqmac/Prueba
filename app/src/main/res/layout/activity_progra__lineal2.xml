<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3C3F41"
    tools:context=".Teoria_Cola2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#103F91">

        <TextView
            android:id="@+id/hor1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Explicación"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        
        <androidx.cardview.widget.CardView
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Plano"
                    android:textColor="#03164B"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:textStyle="bold"/>


                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/justificar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/descripcion"
                    android:textColor="#313335"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/circleIMG"
                    android:layout_width="match_parent"
                    android:layout_height="266dp"
                    android:layout_marginTop="180dp"
                    android:src="@drawable/plano" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Subplano"
                android:textColor="#03164B"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:textStyle="bold"/>


            <com.codesgood.views.JustifiedTextView
                android:id="@+id/justificar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:text="@string/descripcion2"
                android:textColor="#313335"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/circleIMG2"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/subplano" />
        </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Recta"
                android:textColor="#03164B"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:textStyle="bold"/>


            <com.codesgood.views.JustifiedTextView
                android:id="@+id/justificar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:text="@string/descripcion3"
                android:textColor="#313335"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/circleIMG3"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:layout_marginTop="150dp"
                android:src="@drawable/recta" />
        </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Vértice"
                android:textColor="#03164B"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:textStyle="bold"/>


            <com.codesgood.views.JustifiedTextView
                android:id="@+id/justificar4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:text="@string/descripcion4"
                android:textColor="#313335"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/circleIMG4"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/vertice" />
        </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    </ScrollView>



</RelativeLayout>